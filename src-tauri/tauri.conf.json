{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:23015",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "mint-batch-renamer",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "open": true
      },
      "process": {
        "exit": true,
        "relaunch": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.tihus.renamer",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "title": "Mint Renamer",
        "width": 1280,
        "height": 720,
        "alwaysOnTop": false,
        "center": true,
        "maxWidth": 1920,
        "maxHeight": 1080,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "visible": false
      },
      {
        "label": "splashscreen",
        "width": 750,
        "height": 300,
        "alwaysOnTop": true,
        "center": true,
        "closable": false,
        "decorations": false,
        "skipTaskbar": true,
        "transparent": true,
        "url": "splashscreen.html"
      }
    ]
  }
}